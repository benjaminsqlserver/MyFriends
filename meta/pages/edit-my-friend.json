{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "First Name",
                              "component": "FirstName",
                              "name": "FirstNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "FirstName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${myfriend.FirstName}"
                            },
                            {
                              "type": "required-validator",
                              "name": "FirstNameRequiredValidator",
                              "component": "FirstName",
                              "text": "FirstName is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Middle Name",
                              "component": "MiddleName",
                              "name": "MiddleNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "MiddleName",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${myfriend.MiddleName}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Surname",
                              "component": "Surname",
                              "name": "SurnameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "Surname",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${myfriend.Surname}"
                            },
                            {
                              "type": "required-validator",
                              "name": "SurnameRequiredValidator",
                              "component": "Surname",
                              "text": "Surname is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Gender",
                              "component": "GenderID",
                              "name": "GenderIDLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getGendersResult}",
                              "textProperty": "GenderName",
                              "valueProperty": "GenderID",
                              "placeholder": "Choose Gender",
                              "valueType": "int",
                              "type": "dropdown",
                              "name": "GenderID",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${myfriend.GenderID}"
                            },
                            {
                              "type": "required-validator",
                              "name": "GenderIDRequiredValidator",
                              "component": "GenderID",
                              "text": "GenderID is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Whatsapp Number",
                              "component": "WhatsappNumber",
                              "name": "WhatsappNumberLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "WhatsappNumber",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${myfriend.WhatsappNumber}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Phone Number 2",
                              "component": "PhoneNumber2",
                              "name": "PhoneNumber2Label",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "PhoneNumber2",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${myfriend.PhoneNumber2}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Email",
                              "component": "Email",
                              "name": "EmailLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "Email",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${myfriend.Email}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update MyFriend",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ConData.updateMyFriend",
                        "parameters": [
                          {
                            "name": "FriendID",
                            "value": "${parameters.FriendID}"
                          },
                          {
                            "name": "MyFriend",
                            "value": "${myfriend}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${myfriend}",
                            "condition": ""
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "AcheruFriends.Models.ConData.MyFriend",
                  "data": "${myfriend}",
                  "visible": "${myfriend != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "ConData.getMyFriendByFriendID",
        "parameters": [
          {
            "name": "FriendID",
            "value": "${parameters.FriendID}"
          }
        ],
        "then": [
          {
            "name": "myfriend",
            "type": "set",
            "value": "${result}",
            "valueType": "AcheruFriends.Models.ConData.MyFriend"
          }
        ],
        "error": [],
        "type": "invoke"
      },
      {
        "name": "ConData.getGenders",
        "parameters": [],
        "then": [
          {
            "name": "getGendersResult",
            "type": "set",
            "value": "${result.Value.AsODataEnumerable()}",
            "valueType": "IEnumerable<AcheruFriends.Models.ConData.Gender>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit My Friend",
  "layout": "Main",
  "access": [
    "SuperAdmin"
  ]
}